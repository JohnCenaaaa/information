<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information3">

    <TextView
        android:id="@+id/information3_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/material_dynamic_tertiary60"
        android:fontFamily="sans-serif-medium"
        android:text="Personal Information"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/information3_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/boy_adult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_text" />

    <TextView
        android:id="@+id/information3_text2"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Height:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_image" />

    <TextView
        android:id="@+id/information3_text3"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:text="Weight:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_inputText" />

    <EditText
        android:id="@+id/information3_inputText"
        android:layout_width="258dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Enter Your Height (Optional)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_text2" />

    <EditText
        android:id="@+id/information3_inputText2"
        android:layout_width="263dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Enter Your Weight (Optional)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_text3" />

    <Button
        android:id="@+id/information3_button"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:text="Next"
        android:textColor="@color/material_dynamic_tertiary40"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information3_inputText2" />

    <FrameLayout
        android:id="@+id/fragment_container3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.constraintlayout.widget.ConstraintLayout>